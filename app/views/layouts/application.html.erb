<!DOCTYPE html>
<html>
<head>
  <title>BookGem</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>
<body>
<nav class="nav">
  <a href="<%= root_path %>">
    <div class="nav-brand">ðŸ“š BookGem</div>
  </a>
  <div class="nav-links">
    <% if user_signed_in? %>
      <span>Logged in as: <%= current_user.name %></span>
      <%= link_to "My dashboard", dashboard_path, class: "btn btn-secondary" %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
    <% else %>
      <% if controller_name == 'pages' && action_name == 'home' %>
        <%= link_to "Log In", new_user_session_path, class: "btn btn-secondary" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</nav>

<%= render "shared/flashes" %>
<%= yield %>
</body>
</html>
