<div class="container">
  <div class="card">
    <h1>List a New Book</h1>

    <% if @book.errors.any? %>
      <div class="alert alert-danger">
        <h4>There were errors with your submission:</h4>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= simple_form_for @book do |form| %>
        <%= form.input :user_id, collection: @users, label: "Book owner", as: :select, include_blank: "Select a user" %>

        <%= form.input :title, label: "Book Title", placeholder: "Enter the book title" %>

        <%= form.input :author, label: "Author", placeholder: "Enter the author's name" %>

        <%= form.input :category, label: "Category", collection: ["Fiction", "Non-Fiction", "Science", "History", "Other"], as: :select, include_blank: "Select a category" %>

        <%= form.input :price, label: "Deposit price", placeholder: "Enter the price" %>

        <%= form.input :photo, as: :file, label: "Photo" %>

        <%= form.button :submit, "List Book", class: "btn btn-primary" %>
    <% end %>

    <%= link_to "Back to Books", books_path, class: "btn btn-secondary" %>
  </div>
</div>
