<div class="books-section">
  <div class="search-container">
    <%= form_with url: books_path, method: :get, local: true, class: "search-form" do |f| %>
      <div class="search-group">
        <%= f.text_field :query,
                         placeholder: "Search by title, author, or ISBN...",
                         class: "search-input",
                         autocomplete: "off" %>
      </div>

      <div class="search-group">
        <%= f.select :category,
                     [
                       ['All Categories', ''],
                       ['Fiction', 'fiction'],
                       ['Non-Fiction', 'non-fiction'],
                       ['Rare Editions', 'rare'],
                       ['First Editions', 'first-edition'],
                       ['Signed Copies', 'signed']
                     ],
                     {},
                     class: "search-select" %>
      </div>

      <%= button_tag type: 'submit', class: "search-button" do %>
        <span>Search Books</span>
      <% end %>
    <% end %>
  </div>

  <% if @books.present? %>
    <div class="books-grid">
      <% @books.each do |book| %>
        <div class="book-card">
          <div class="book-image">
            <% if book.image.attached? %>
              <%= image_tag book.image, alt: book.title %>
            <% else %>
              <%= image_tag "placeholder.png", alt: "Placeholder Image" %>
            <% end %>
          </div>
          <div class="book-info">
            <h3><%= book.title %></h3>
            <p><%= book.description %></p>
            <p class="availability">Available for <%= book.loan_duration %>-week borrowing</p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <h2>Most Popular</h2>
    <div class="carousel-container">
      <div class="carousel-buttons">
        <button class="prev">←</button>
        <button class="next">→</button>
      </div>
      <div class="books-carousel">
        <%# Corrected carousel items with reliable images %>
        <div class="book-card">
          <div class="book-image">
            <%= image_tag "https://picsum.photos/200/300", alt: "The Great Gatsby First Edition" %>
          </div>
          <div class="book-info">
            <span class="book-rarity">First Edition</span>
            <h3>The Great Gatsby (1925)</h3>
            <p class="book-description">Rare first edition, first printing with original dust jacket. One of only 20,000 copies printed. Exceptional condition with minimal wear.</p>
            <p class="availability">Available for 2-week borrowing</p>
          </div>
        </div>

        <div class="book-card">
          <div class="book-image">
            <%= image_tag "https://picsum.photos/200/300", alt: "Ulysses First Edition" %>
          </div>
          <div class="book-info">
            <span class="book-rarity">Limited Edition</span>
            <h3>Ulysses (1922)</h3>
            <p class="book-description">One of 750 numbered copies on handmade paper, signed by James Joyce. Pristine condition with original Shakespeare & Company binding.</p>
            <p class="availability">Available for 1-week borrowing</p>
          </div>
        </div>

        <div class="book-card">
          <div class="book-image">
            <%= image_tag "https://picsum.photos/200/300", alt: "Pride and Prejudice First Edition" %>
          </div>
          <div class="book-info">
            <span class="book-rarity">First Edition</span>
            <h3>Pride and Prejudice (1813)</h3>
            <p class="book-description">First edition in original boards. Published by T. Egerton, Whitehall. Complete with half-titles and all three volumes.</p>
            <p class="availability">Available for 3-week borrowing</p>
          </div>
        </div>

        <div class="book-card">
          <div class="book-image">
            <%= image_tag "https://picsum.photos/200/300", alt: "Alice's Adventures in Wonderland" %>
          </div>
          <div class="book-info">
            <span class="book-rarity">Illustrated Edition</span>
            <h3>Alice's Adventures in Wonderland (1901)</h3>
            <p class="book-description">Rare illustrated edition with original Arthur Rackham illustrations. Full leather binding with gilt edges.</p>
            <p class="availability">Available for 2-week borrowing</p>
          </div>
        </div>

        <div class="book-card">
          <div class="book-image">
            <%= image_tag "https://picsum.photos/200/300", alt: "Don Quixote" %>
          </div>
          <div class="book-info">
            <span class="book-rarity">Antique Edition</span>
            <h3>Don Quixote (1780)</h3>
            <p class="book-description">18th century Spanish edition with hand-colored plates. Original leather binding with marbled endpapers.</p>
            <p class="availability">Available for 1-week borrowing</p>
          </div>
        </div>

        <div class="book-card">
          <div class="book-image">
            <%= image_tag "https://picsum.photos/200/300", alt: "The Hobbit" %>
          </div>
          <div class="book-info">
            <span class="book-rarity">First Edition</span>
            <h3>The Hobbit (1937)</h3>
            <p class="book-description">First edition with original dust jacket. Contains all original color plates by Tolkien. Exceptional condition.</p>
            <p class="availability">Available for 2-week borrowing</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
