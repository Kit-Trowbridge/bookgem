<div class="container">
  <% @books.each do |book| %>
    <div class="card-body">
      <h5 class="card-title"><%= link_to book.title, book_path(book) %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary"><%= book.author %></h6>
    </div>
  <% end %>
</div>

<%= link_to 'List a book', new_book_path, class: "btn btn-secondary mt-3" %>
